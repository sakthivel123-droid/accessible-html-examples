<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>WCAG 4.1.3 Status Messages Example</title>
<style>
  body { font-family: Arial, sans-serif; margin: 30px; }
  .message { margin-top: 10px; padding: 10px; border-radius: 5px; }
  .success { background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
  .error { background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
  .info { background-color: #d1ecf1; color: #0c5460; border: 1px solid #bee5eb; }
  button { margin-top: 10px; }
</style>
</head>
<body>

<h1>WCAG 4.1.3 - Status Messages Example</h1>

<!-- Scenario 1: Form Success and Error Messages -->
<h2>Scenario 1: Form Submission</h2>
<form id="contactForm" aria-describedby="formStatus">
  <label for="name">Enter your name:</label><br>
  <input type="text" id="name" name="name"><br>
  <button type="submit">Submit</button>
</form>

<!-- aria-live ensures screen readers announce messages automatically -->
<div id="formStatus" class="message" aria-live="polite"></div>

<hr>

<!-- Scenario 2: Dynamic Content Update (like loading or saving) -->
<h2>Scenario 2: Dynamic Updates</h2>
<button id="loadBtn">Load Data</button>
<div id="dataStatus" class="message info" role="status"></div>

<hr>

<!-- Scenario 3: Urgent Alert Message -->
<h2>Scenario 3: Urgent Alert</h2>
<button id="deleteBtn">Delete Item</button>
<div id="alertBox" class="message" role="alert"></div>

<hr>

<!-- Scenario 4: Progress Indicator -->
<h2>Scenario 4: Loading / Progress Message</h2>
<button id="startProcess">Start Process</button>
<div id="progress" class="message" role="status" aria-live="polite"></div>

<script>
  // Scenario 1: Form Submission
  document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const name = document.getElementById('name').value.trim();
    const statusDiv = document.getElementById('formStatus');
    if (name === "") {
      statusDiv.className = "message error";
      statusDiv.textContent = "Error: Please enter your name.";
    } else {
      statusDiv.className = "message success";
      statusDiv.textContent = `Success: Thank you, ${name}! Your form was submitted successfully.`;
    }
  });

  // Scenario 2: Dynamic Update
  document.getElementById('loadBtn').addEventListener('click', function() {
    const dataStatus = document.getElementById('dataStatus');
    dataStatus.textContent = "Loading data, please wait...";
    setTimeout(() => {
      dataStatus.textContent = "Data loaded successfully!";
    }, 2000);
  });

  // Scenario 3: Urgent Alert
  document.getElementById('deleteBtn').addEventListener('click', function() {
    const alertBox = document.getElementById('alertBox');
    alertBox.className = "message error";
    alertBox.textContent = "Alert: Item deleted permanently!";
  });

  // Scenario 4: Progress Message
  document.getElementById('startProcess').addEventListener('click', function() {
    const progress = document.getElementById('progress');
    progress.textContent = "Processing started...";
    let count = 0;
    const interval = setInterval(() => {
      count += 25;
      if (count < 100) {
        progress.textContent = `Processing... ${count}% complete`;
      } else {
        progress.textContent = "Process completed successfully!";
        clearInterval(interval);
      }
    }, 1000);
  });
</script>

</body>
</html>
